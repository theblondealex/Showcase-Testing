{
  "expo": {
    "name": "Showcase-Testing",
    "slug": "Showcase-Testing",
    "version": "1.0.0",
    "platforms": ["ios", "android"],
    "scheme": "showcase-testing",

    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true,

      "tsconfigPaths": true
    },

    "orientation": "portrait",
    "icon": "./src/assets/icon.png",

    "userInterfaceStyle": "light",

    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    }
  }
}
